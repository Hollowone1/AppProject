{% extends 'base.html.twig' %}

{% block title %}Vous connectez{% endblock %}

{% block body %}
    {% form_theme form 'tailwind_2_layout.html.twig' %}

    {{ form_start(form) }}
    <h1 class="text-6xl font-bold text-center py-6 ">Veuillez vous-connectez</h1>
    <div class="mb-3 bg-emerald-200 p-4 w-96 m-auto rounded-lg">
        {{ form_row(form.email) }}
    </div>
    <div class="mb-3 bg-emerald-200 p-4 w-96 m-auto rounded-lg">
        {{ form_row(form.password) }}
    </div>

<div class="mb-3 m-auto w-full text-center">
    <button class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-2 px-4 rounded" type="submit">
            Se connecter
    </button>
</div>
    
    {{ form_end(form) }}
{% endblock %}
