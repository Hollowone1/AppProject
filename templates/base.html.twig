<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header class="bg-emerald-500 shadow-md sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex-shrink-0">
                    <a class="text-2xl font-bold text-white">StreamDeck</a>
                </div>

                <!-- Links (Desktop) -->
                <nav class="hidden md:flex space-x-6 text-lg">
                    <a class="hover:text-gray-200 transition">Contenu</a>
                    <a class="hover:text-gray-200 transition">Favoris</a>
                    <a class="hover:text-gray-200 transition">Playlist</a>
                </nav>

                <!-- Search -->
                <div class="hidden md:flex flex-1 max-w-md mx-6">
                    <form  method="get" class="w-full">
                        <input type="text" name="q" placeholder="Rechercher..."
                               class="w-full rounded-full px-4 py-2 text-black focus:outline-none">
                    </form>
                </div>

                <!-- Burger Menu (Mobile) -->
                <div class="md:hidden">
                    <button id="burgerBtn" class="focus:outline-none">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-emerald-600">
            <div class="px-4 py-4 space-y-2">
                <a  class="block text-lg hover:text-gray-200">Contenu</a>
                <a  class="block text-lg hover:text-gray-200">Favoris</a>
                <a  class="block text-lg hover:text-gray-200">Playlist</a>
                <form  method="get" class="mt-2">
                    <input type="text" name="q" placeholder="Rechercher..."
                           class="w-full rounded-full px-4 py-2 text-black focus:outline-none">
                </form>
            </div>
        </div>
    </header>
        {% block body %}{% endblock %}
    </body>
</html>
