{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur StreamDeck {% endblock %}

{% block body %}
<div class="bg-black text-white min-h-screen">
    <section class="relative h-[100vh] flex items-center justify-center text-center">
        <img src="{{ asset('images/hero-bg.jpg') }}" class="absolute inset-0 w-full h-full object-contain opacity-60" alt="Hero background">
        <div class="relative z-10 max-w-3xl px-6">
            <h1 class="text-5xl md:text-6xl font-extrabold mb-6">Plongez dans l’univers <span class="text-white">StreamDeck</span></h1>
            <p class="text-lg md:text-xl text-gray-300 mb-8">Des milliers de films, séries et documentaires. Regardez ce que vous aimez, quand vous voulez.</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ path('app_register') }}" class="bg-emerald-600 hover:bg-emerald-700 px-8 py-3 rounded-full text-lg font-semibold transition">Commencer maintenant</a>
            </div>
        </div>
    </section>

    <section class="py-12 px-6">
        <h2 class="text-4xl font-bold mb-8 text-center text-white">Nos recommandations</h2>
        <div class="flex space-x-6 overflow-x-scroll scrollbar-hide">
            {% for movie in movies %}
                <div class="min-w-[full] bg-gray-600 rounded-lg overflow-hidden shadow-lg transform hover:scale-105 transition
                min-h-96">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold mb-2">{{ movie.title }}</h3>
                        <p class="text-sm text-gray-400">{{ movie.description|length > 80 ? movie.description|slice(0,80) ~ '...' : movie.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}
